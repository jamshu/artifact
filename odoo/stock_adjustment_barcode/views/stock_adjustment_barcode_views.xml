<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_adjustment_barcode_scan_form_view" model="ir.ui.view">
        <field name="name">stock.adjustment.barcode.scan.form.view</field>
        <field name="model">stock.adjustment.barcode</field>
        <field name="priority">99</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="_barcode_scanned" widget="barcode_handler"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <notebook>
                        <page name="adjustment_line_info" string="Detailed Adjustment Line">
                            <field name="inv_adjustment_line_info_ids" mode="tree">
                                <tree editable="bottom">
                                    <field name="inv_adjustment_id" invisible="1"/>
                                    <field name="disallowed_product_ids" invisible="1"/>
                                    <field name="product_id"/>
                                    <field name="lot_id" optional="hide"/>
                                    <field name="product_uom_id"/>
                                    <field name="scanned_qty" force_save="1"/>
                                    <field name="scanned_user_id" readonly="1" force_save="1" optional="hide"/>
                                    <field name="create_uid" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="stock_adjustment_barcode_search_view" model="ir.ui.view">
        <field name="name">stock.adjustment.barcode.search.view</field>
        <field name="model">stock.adjustment.barcode</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Sequence Number" filter_domain="[('name', 'ilike', self)]"/>
                <field name="location_id" string="Location" filter_domain="[('location_id', 'ilike', self)]"/>
                <field name="inv_adjustment_line_ids" string="Product" filter_domain="[('inv_adjustment_line_ids.product_id', 'ilike', self)]"/>
                <filter name="my_request" string="My Request" domain="[('create_uid', '=', uid)]"/>
                <group expand="0" string="Group By">
                    <filter string="State" name="state" domain="[]" context="{'group_by': 'state'}"/>
                    <filter string="Location" name="location" domain="[]" context="{'group_by': 'location_id'}"/>
                    <filter string="Inventory Date" name="inv_date" domain="[]" context="{'group_by': 'inventory_date'}"/>
                </group>
            </search>

        </field>
    </record>

    <record id="stock_adjustment_barcode_tree_view" model="ir.ui.view">
        <field name="name">stock.adjustment.barcode.tree.view</field>
        <field name="model">stock.adjustment.barcode</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="location_id" groups="stock.group_stock_multi_locations" optional="show"/>
                <field name="create_uid" optional="hide"/>
                <field name="approved_by" optional="show"/>
                <field name="posted_date" optional="hide"/>
                <field name="inventory_date" optional="hide"/>
                <field name="force_accounting_date" optional="hide"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
                <field name="state"
                    decoration-muted="state == 'draft'"
                    decoration-info="state == 'to_approve'"
                    decoration-success="state == 'done'"
                    decoration-danger="state == 'cancel'"
                    optional="show" widget="badge" class="text-dark"/>
            </tree>
        </field>
    </record>

    <record id="stock_adjustment_barcode_form_view" model="ir.ui.view">
        <field name="name">stock.adjustment.barcode.form.view</field>
        <field name="model">stock.adjustment.barcode</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_open_scan_line" string="Scan Line" type="object" class="oe_highlight"
                        attrs="{'invisible': [('state', '!=', 'draft')]}" context="{'scanned_user_id': uid}"/>
                    <button name="action_confirm" string="Confirm" type="object" class="oe_highlight"
                        attrs="{'invisible': ['|', ('inv_adjustment_line_ids', '=', []), ('state', '!=', 'draft')]}"
                        confirm="Are you sure you want to confirm?"/>
                    <button name="action_approved" string="Approve" class="oe_highlight" type="object"
                        attrs="{'invisible': [('state', '!=', 'to_approve')]}"
                        groups="stock_adjustment_barcode.approve_stock_adjustment_barcode_group"/>
                    <button name="action_done" string="Post" class="oe_highlight" type="object"
                        attrs="{'invisible': [('state', '!=', 'approved')]}"/>
                    <button name="action_refresh_stock" string="Refresh Stock" type="object"
                        attrs="{'invisible': ['|', ('inv_adjustment_line_ids', '=', []), ('state', 'in', ['cancel', 'done'])]}"
                        groups="stock_adjustment_barcode.approve_stock_adjustment_barcode_group"
                        confirm="Are you sure you want to refresh stock?" />
                    <!-- attrs="{'invisible': ['|', ('state', '!=', 'approved'), ('is_recompute', '!=', False)]}" -->
                    <button name="action_recompute_lots" string="Recompute Lots" type="object" invisible="1"/>
                    <button name="action_cancel" string="Cancel" type="object"
                        attrs="{'invisible': [('state', 'in', ['cancel', 'done'])]}"/>
                    <button name="action_reset_to_draft" string="Reset to Draft" type="object"
                        attrs="{'invisible': [('state', '!=', 'cancel')]}"/>
                    <button name="action_set_zero_values" string="Get Negative Quantity Zero Products" type="object"
                        attrs="{'invisible': ['|', ('inv_adjustment_line_ids', '!=', []), ('state', '!=', 'draft')]}"
                        confirm="Are you sure you want to fix zero stock?" />
<!--                    <button name="action_initialize_disallowed_products" string="Initialize BOM Transfer Parent Products" type="object"-->
<!--                        attrs="{'invisible': [('state', '!=', 'draft')]}"-->
<!--                        help="Find and block parent products from BOM transfers that should not be scanned directly" />-->
                    <field name="state" widget="statusbar" statusbar_visible="draft,to_approve,approved,done"/>
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button name="action_view_stock_move" type="object" class="oe_stat_button" icon="fa-exchange"
                            string="Stock Moves" attrs="{'invisible': [('state', '!=', 'done')]}" groups="stock.group_stock_user"/>
                        <button name="action_view_account_move" type="object" class="oe_stat_button" icon="fa-usd"
                            string="Accounting Entries" attrs="{'invisible': [('state', '!=', 'done')]}"
                            groups="account.group_account_user"/>
                        <button name="%(stock_adjustment_barcode.inv_cost_analysis_report_action)d" type="action"
                            class="oe_stat_button" icon="fa-line-chart" string="Cost Analysis"
                            attrs="{'invisible': [('state', 'in', ('draft'))]}"
                            groups="base_product_cost_security.group_product_cost_security"/>
                        <button name="%(stock_adjustment_barcode.stock_variation_report_action)d" type="action"
                            class="oe_stat_button" icon="fa-bar-chart" string="Stock Variation Report"
                            attrs="{'invisible': [('state', 'in', ('draft'))]}" />
                        <button string="Valuation" type="object" name="action_view_stock_valuation_layers" class="oe_stat_button"
                            icon="fa-dollar" attrs="{'invisible': [('state', '!=', 'done')]}"
                            groups="base_product_cost_security.group_product_cost_security" />
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" readonly="1"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="location_id" required="1" attrs="{'readonly': [('inv_adjustment_line_ids', '!=', [])]}"/>
                            <field name="create_uid" readonly="1"/>
                            <field name="approved_by" readonly="1"/>
                            <field name="is_recompute" invisible="1"/>
                        </group>
                        <group>
                            <field name="posted_date" readonly="1" force_save="1"/>
                            <field name="inventory_date" required="1" attrs="{'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="force_accounting_date" attrs="{'required': [('state', '=', 'to_approve')], 'readonly': [('state', '=', 'done')]}"/>
                            <field name="company_id" groups="base.group_multi_company" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="adjustment_line" string="Adjustment Line">
                            <field name="inv_adjustment_line_ids" mode="tree,form" context="{'default_sequence': 10}">
                                <tree create="0" default_order="display_sequence,id">
                                    <field name="is_editable" attrs="{'column_invisible': [('parent.state', '!=', 'approved')]}"/>
                                    <field name="is_parent_line" invisible="1"/>
                                    <field name="is_child_line" invisible="1"/>
                                    <field name="parent_product_id" invisible="1"/>
                                    <field name="display_sequence" invisible="1"/>
                                    <field name="product_id" readonly="1" force_save="1" invisible="1"/>
                                    <field name="display_name_with_relation" string="Product" readonly="1" 
                                           decoration-bf="is_parent_line" 
                                           decoration-muted="is_child_line"
                                           decoration-success="is_parent_line"/>
                                    <field name="product_uom_id" readonly="1" force_save="1" optional="show" 
                                           decoration-muted="is_child_line"/>
                                    <field name="unit_price" optional="hide" attrs="{'readonly': [('parent.state', 'in', ['done', 'approved'])]}" 
                                           decoration-muted="is_child_line"/>
                                    <field name="on_hand_qty" attrs="{'readonly': [('parent.state', 'in', ['done', 'approved'])]}" 
                                           decoration-muted="is_child_line"/>
                                    <field name="forecast_qty" invisible="1"/>
                                    <field name="total_scanned_qty" readonly="1" force_save="1" optional="show" 
                                           decoration-muted="is_child_line"/>
                                    <field name="difference_qty" attrs="{'readonly': [('parent.state', 'in', ['done', 'approved'])]}" 
                                           decoration-muted="is_child_line"/>
                                    <button name="action_open_stock_adjustment_barcode_line_info" icon="fa-info-circle" type="object"
                                        title="Line Details" class="btn-link" attrs="{'invisible': [('is_child_line', '=', True)]}"/>
                                    <button name="action_show_details" icon="fa-list" title="Lot Details" type="object"
                                        attrs="{'invisible': ['|', ('parent.state', 'in', ('draft', 'cancel')), ('is_child_line', '=', True)]}"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <div class="oe_title">
                                            <h1>
                                                <field name="inv_adjustment_id" readonly="1" force_save="1" options="{'no_open': true}"/>
                                            </h1>
                                        </div>
                                        <group>
                                            <group>
                                                <field name="product_id" readonly="1" force_save="1"/>
                                                <field name="parent_product_id" readonly="1" attrs="{'invisible': [('parent_product_id', '=', False)]}"/>
                                                <field name="lot_id" invisible="1"/>
                                                <field name="product_uom_id"/>
                                                <field name="company_id"/>
                                                <field name="is_editable" invisible="1"/>
                                                <field name="is_parent_line" invisible="1"/>
                                                <field name="is_child_line" invisible="1"/>
                                            </group>
                                            <group>
                                                <field name="on_hand_qty"/>
                                                <field name="forecast_qty" invisible="1"/>
                                                <field name="unit_price" invisible="1"/>
                                                <field name="total_scanned_qty"/>
                                                <field name="difference_qty"/>
                                            </group>
                                        </group>
                                        <notebook>
                                            <page string="Scanned Line" name="adjustment_line_info">
                                                <field name="adjustment_line_info_ids" mode="tree" readonly="1">
                                                    <tree create="0" edit="0">
                                                        <field name="inv_adjustment_id" invisible="1"/>
                                                        <field name="disallowed_product_ids" invisible="1"/>
                                                        <field name="product_id"/>
                                                        <field name="product_uom_id"/>
                                                        <field name="scanned_qty"/>
                                                        <field name="scanned_user_id"/>
                                                    </tree>
                                                    <form create="0" edit="0">
                                                        <sheet>
                                                            <group>
                                                                <group>
                                                                    <field name="product_id"/>
                                                                    <field name="product_uom_id"/>
                                                                    <field name="scanned_qty"/>
                                                                </group>
                                                                <group>
                                                                    <field name="scanned_user_id"/>
                                                                </group>
                                                            </group>
                                                        </sheet>
                                                    </form>
                                                </field>
                                            </page>
                                            <page string="Lot Line" name="lot_line_info">
                                                <field name="adjustment_line_lot_ids" mode="tree" attrs="{'readonly': [('is_editable', '=', False)]}">
                                                    <tree editable="bottom">
                                                        <field name="product_id" optional="hide" readonly="1" force_save="1"/>
                                                        <field name="lot_id" required="1"/>
                                                        <field name="current_qty" sum="Total Current Quantity"/>
                                                        <field name="new_qty" sum="Total New Quantity"/>
                                                        <field name="difference_qty" sum="Total Difference Quantity"/>
                                                        <field name="create_date" optional="hide"/>
                                                    </tree>
                                                    <form edit="0">
                                                        <sheet>
                                                            <group>
                                                                <group>
                                                                    <field name="product_id"/>
                                                                    <field name="lot_id"/>
                                                                </group>
                                                                <group>
                                                                    <field name="current_qty"/>
                                                                    <field name="new_qty"/>
                                                                    <field name="difference_qty"/>
                                                                </group>
                                                            </group>
                                                        </sheet>
                                                    </form>
                                                </field>
                                            </page>
                                        </notebook>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="stock_adjustment_barcode_action" model="ir.actions.act_window">
        <field name="name">Stock Adjustment Barcode</field>
        <field name="res_model">stock.adjustment.barcode</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new record for Stock Adjustment
            </p>
        </field>
    </record>

    <menuitem
        id="stock_adjustment_barcode_menu"
        action="stock_adjustment_barcode_action"
        name="Stock Adjustment Barcode"
        parent="stock.menu_stock_warehouse_mgmt"
        sequence="22"/>

</odoo>
