<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="stock_adjustment_barcode_lot_line_tree_view" model="ir.ui.view">
        <field name="name">stock.adjustment.barcode.lot.line.tree.view</field>
        <field name="model">stock.adjustment.barcode.lot.line</field>
        <field name="arch" type="xml">
            <tree editable="top" create="0" delete="0" edit="0">
                <field name="product_id" optional="hide"/>
                <field name="lot_id"/>
                <field name="current_qty" sum="Total Current Quantity"/>
                <field name="new_qty" sum="Total New Quantity"/>
                <field name="difference_qty" sum="Total difference Quantity"/>
                <field name="create_date" optional="hide"/>
            </tree>
        </field>
    </record>

    <record id="stock_adjustment_barcode_lot_line_action" model="ir.actions.act_window">
        <field name="name">Stock Adjustment Barcode Lot Line Info</field>
        <field name="res_model">stock.adjustment.barcode.lot.line</field>
        <field name="view_mode">tree</field>
        <field name="target">new</field>
        <field name="view_id" ref="stock_adjustment_barcode_lot_line_tree_view"/>
    </record>

</odoo>
